{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "typeRoots": ["./node_modules/@types"],
    "module": "esnext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false
  },
  "exclude": ["node_modules"]
}
